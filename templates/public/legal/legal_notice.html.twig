                <p>{{ 'legal.sections.1.text1'|trans|raw }}</p>
                <p>{{ 'legal.sections.1.text2'|trans|raw }}</p>
                <ul class="list-disc list-inside space-y-2">
                    <li>{{ 'legal.sections.1.list.phone'|trans|raw }}</li>
                    <li>{{ 'legal.sections.1.list.email'|trans|raw }}</li>
                    <li>{{ 'legal.sections.1.list.website'|trans|raw }}</li>
                </ul>
                <p>{{ 'legal.sections.1.director'|trans|raw }}</p>
            </div>
        </div>
        <div class="space-y-4">
            <h3 class="text-lg font-semibold">{{ 'legal.sections.2.title'|trans|raw }}</h3>
