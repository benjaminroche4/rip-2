                    <li>{{ 'legal.sections.3.list.dev'|trans|raw }}</li>
                </ul>
                <p>{{ 'legal.sections.3.text'|trans|raw }}</p>
            </div>
        </div>
        <div class="space-y-4">
            <h3 class="text-lg font-semibold">{{ 'legal.sections.4.title'|trans|raw }}</h3>
            <div class="space-y-2">
