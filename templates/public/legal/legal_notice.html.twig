        <div class="max-w-2xl mx-auto flex flex-col justify-center text-center space-y-4">
            <h1 class="text-center font-semibold text-primary font-secondary">
                {{ 'legal.title'|trans|raw }}
            </h1>
            <h2 class="text-4xl lg:text-5xl/16 font-medium text-balance">
                {{ 'legal.subTitle'|trans|raw }}
            </h2>
        </div>
    </section>

    <section class="max-w-4xl mx-auto lg:px-8 px-6 mt-4 mb-12 lg:mb-16 space-y-12">
        <div class="space-y-4">
            <h3 class="text-lg font-semibold">{{ 'legal.sections.1.title'|trans|raw }}</h3>
