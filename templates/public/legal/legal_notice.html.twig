{% extends 'base.html.twig' %}

{% block title %}{{ 'meta.legalNotice.title'|trans }}{% endblock %}
{% block description %}{{ 'meta.legalNotice.description'|trans }}{% endblock %}
{% block url %}{{ path('app_legal_notice') }}{% endblock %}

