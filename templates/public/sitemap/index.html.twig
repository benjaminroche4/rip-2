{% extends 'base.html.twig' %}

{% block title %}{{ 'meta.sitemap.title'|trans }}{% endblock %}
{% block description %}{{ 'meta.sitemap.description'|trans }}{% endblock %}
{% block url %}{{ path('app_sitemap') }}{% endblock %}

{% block body %}
    <section class="max-w-7xl mx-auto lg:px-8 px-6 lg:py-16 py-12">
        <div class="max-w-2xl mx-auto flex flex-col justify-center text-center space-y-4">
            <h1 class="text-center font-semibold text-primary font-secondary">Sitemap</h1>
            <h2 class="text-4xl lg:text-5xl/16 font-medium text-pretty">Plan du site</h2>
            <p></p>
        </div>
        <div class="max-w-4xl mx-auto py-12">
            <div class="space-y-6">
                <h3 class="bg-neutral-100 inline-block text-lg font-medium font-secondary px-3 py-2.5 rounded-lg">Général</h3>
                <div>
                    <ul class="list list-disc ml-12 space-y-3">
                        <li><a href="{{ path('app_home') }}" class="hover:text-primary transition duration-100">Accueil</a></li>
                        <li><a href="{{ path('app_service_find_accommodation') }}" class="hover:text-primary transition duration-100">Trouver un logement</a></li>
                        <li><a href="{{ path('app_service_companies') }}" class="hover:text-primary transition duration-100">Entreprises</a></li>
                        <li><a href="{{ path('app_service_landlords') }}" class="hover:text-primary transition duration-100">Propriétaires</a></li>
                        <li><a href="{{ path('app_contact') }}" class="hover:text-primary transition duration-100">Contact</a></li>
                        <li><a href="{{ path('app_sitemap') }}" class="hover:text-primary transition duration-100">Sitemap</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
