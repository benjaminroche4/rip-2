{% extends 'base.html.twig' %}

{% block title %}{{ 'meta.faq.title'|trans }}{% endblock %}
{% block description %}{{ 'meta.faq.description'|trans }}{% endblock %}
{% block url %}{{ path('app_faq') }}{% endblock %}

{% block body %}
    <section class="max-w-7xl mx-auto lg:px-8 px-6 lg:pt-16 pt-12 lg:pb-10 pb-6">
        <div class="max-w-2xl mx-auto flex flex-col justify-center text-center space-y-4">
            <h1 class="text-center font-semibold text-primary font-secondary">{{ 'faq.title'|trans|raw }}</h1>
            <h2 class="text-4xl lg:text-5xl/16 font-medium text-balance">{{ 'faq.subTitle'|trans|raw }}</h2>
        </div>
    </section>
    <section class="max-w-7xl mx-auto lg:px-8 px-6 lg:pb-16 pb-12" x-data="{ activeTab: 'tenants' }">
        <div class="flex justify-center mx-auto py-2 rounded-md pb-10">
            <div class="p-1.5 rounded-2xl bg-white border border-neutral-100 w-full sm:w-auto shadow-lg shadow-gray-300/30">
                <div class="flex flex-col sm:flex-row w-full gap-2">
                    <button
                        @click="activeTab = 'tenants'"
                        :class="activeTab === 'tenants' ? 'bg-gray-100 text-primary' : 'text-gray-600 hover:text-primary hover:bg-gray-50'"
                        class="px-3 py-2 rounded-xl transition-all duration-200 cursor-pointer"
                    >
                        <span class="text-sm font-semibold">{{ 'faq.tabs.1'|trans|raw }}</span>
                    </button>
                    <button
                        @click="activeTab = 'companies'"
                        :class="activeTab === 'companies' ? 'bg-gray-100 text-primary' : 'text-gray-600 hover:text-primary hover:bg-gray-50'"
                        class="px-3 py-2 rounded-xl transition-all duration-200 cursor-pointer"
                    >
                        <span class="text-sm font-semibold">{{ 'faq.tabs.2'|trans|raw }}</span>
                    </button>
                    <button
                        @click="activeTab = 'landlords'"
                        :class="activeTab === 'landlords' ? 'bg-gray-100 text-primary' : 'text-gray-600 hover:text-primary hover:bg-gray-50'"
                        class="px-3 py-2 rounded-xl transition-all duration-200 cursor-pointer"
                    >
                        <span class="text-sm font-semibold">{{ 'faq.tabs.3'|trans|raw }}</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="max-w-2xl mx-auto">
            <div
                x-show="activeTab === 'tenants'"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-y-2"
                x-transition:enter-end="opacity-100 transform translate-y-0"
            >
                <div x-data="{
                        activeAccordion: '',
                        setActiveAccordion(id) {
                            this.activeAccordion = (this.activeAccordion == id) ? '' : id
                        }
                    }" class="relative w-full mx-auto overflow-hidden space-y-4">
                    {% for i in 1..9 %}
                    <div x-data="{ id: $id('accordion-tenants') }" class="cursor-pointer group border border-neutral-100 bg-white rounded-lg hover:border-primary/20 transition duration-100">
                        <button @click="setActiveAccordion(id)" class="flex items-center justify-between w-full p-4 text-left select-none font-semibold gap-x-2">
                            <span>{{ ('faq.tenant.question.' ~ i ~ '.title')|trans|raw }}</span>
                            <svg class="w-4 h-4 duration-200 ease-out shrink-0" :class="{ 'rotate-180': activeAccordion==id }" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
                        </button>
                        <div x-show="activeAccordion==id" x-collapse x-cloak>
                            <div class="p-4 pt-0 opacity-70 text-neutral-800">
                                {{ ('faq.tenant.question.' ~ i ~ '.text')|trans|raw }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div
                x-show="activeTab === 'companies'"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-y-2"
                x-transition:enter-end="opacity-100 transform translate-y-0"
            >
                <div x-data="{
                        activeAccordion: '',
                        setActiveAccordion(id) {
                            this.activeAccordion = (this.activeAccordion == id) ? '' : id
                        }
                    }" class="relative w-full mx-auto overflow-hidden space-y-4">
                    {% for i in 1..6 %}
                    <div x-data="{ id: $id('accordion-companies') }" class="cursor-pointer group border border-neutral-100 bg-white rounded-lg hover:border-primary/20 transition duration-100">
                        <button @click="setActiveAccordion(id)" class="flex items-center justify-between w-full p-4 text-left select-none font-semibold gap-x-2">
                            <span>{{ ('faq.company.question.' ~ i ~ '.title')|trans|raw }}</span>
                            <svg class="w-4 h-4 duration-200 ease-out shrink-0" :class="{ 'rotate-180': activeAccordion==id }" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
                        </button>
                        <div x-show="activeAccordion==id" x-collapse x-cloak>
                            <div class="p-4 pt-0 opacity-70 text-neutral-800">
                                {{ ('faq.company.question.' ~ i ~ '.text')|trans|raw }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div
                x-show="activeTab === 'landlords'"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 transform translate-y-2"
                x-transition:enter-end="opacity-100 transform translate-y-0"
            >
                <div x-data="{
                        activeAccordion: '',
                        setActiveAccordion(id) {
                            this.activeAccordion = (this.activeAccordion == id) ? '' : id
                        }
                    }" class="relative w-full mx-auto overflow-hidden space-y-4">
                    {% for i in 1..9 %}
                    <div x-data="{ id: $id('accordion-landlords') }" class="cursor-pointer group border border-neutral-100 bg-white rounded-lg hover:border-primary/20 transition duration-100">
                        <button @click="setActiveAccordion(id)" class="flex items-center justify-between w-full p-4 text-left select-none font-semibold gap-x-2">
                            <span>{{ ('faq.landlord.question.' ~ i ~ '.title')|trans|raw }}</span>
                            <svg class="w-4 h-4 duration-200 ease-out shrink-0" :class="{ 'rotate-180': activeAccordion==id }" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
                        </button>
                        <div x-show="activeAccordion==id" x-collapse x-cloak>
                            <div class="p-4 pt-0 opacity-70 text-neutral-800">
                                {{ ('faq.landlord.question.' ~ i ~ '.text')|trans|raw }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {{ component('ctaFooter') }}
{% endblock %}
