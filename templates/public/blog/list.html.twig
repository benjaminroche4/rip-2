{% extends 'base.html.twig' %}

{% block title %}{{ 'meta.blog.title'|trans }}{% endblock %}
{% block description %}{{ 'meta.blog.description'|trans }}{% endblock %}
{% block url %}{{ path('app_blog') }}{% endblock %}

{% set hero = posts|first %}
{% set isFr = app.request.locale == 'fr' %}

{% block body %}
    <section class="max-w-7xl mx-auto lg:px-8 px-6 lg:py-16 py-12">
        <div class="max-w-2xl mx-auto flex flex-col justify-center text-center space-y-4">
            <h1 class="text-center font-semibold text-primary font-secondary capitalize">{{ 'blog.list.title'|trans|raw }}</h1>
            <h2 class="text-4xl lg:text-5xl/16 font-medium text-balance">{{ 'blog.list.subTitle'|trans|raw }}</h2>
        </div>
    </section>
    <section class="max-w-6xl mx-auto lg:px-8 px-6 mt-4 mb-12 lg:mb-16">
        {% if hero %}
            <a href="{{ path('app_blog_show', isFr ? {'slugFr': hero.slugFr} : {'slugEn': hero.slugEn}) }}" class="bg-linear-to-b from-primary to-primary/30 p-2 rounded-3xl hover:from-primary/85 hover:to-primary/20 transition duration-100 block">
                <div class="pb-2">
                    <p class="text-sm text-white uppercase tracking-normal font-medium text-center">
                        {{ 'blog.list.lastArticle'|trans|raw }}
                    </p>
                </div>
                <div class="rounded-2xl bg-white grid grid-cols-1 lg:grid-cols-5 lg:gap-4">
                    <div class="col-span-2 flex flex-col justify-between space-y-6 p-6 lg:order-1 order-2">
                        <div class="space-y-4">
                            <div class="flex flex-wrap gap-2">
                                {% set categories = hero.category %}
                                {% set total = categories|length %}
                                {% for category in categories|slice(0, 1) %}
                                    <div class="inline-block px-2.5 py-1 bg-primary/5 rounded-full text-xs text-primary border border-primary/10 capitalize">
                                        {{ isFr ? category.titleFr : category.titleEn }}
                                    </div>
                                {% endfor %}
                                {% if total > 1 %}
                                    <div class="inline-block px-2.5 py-1 bg-primary/5 rounded-full text-xs text-primary border border-primary/10">
                                        +{{ total - 1 }}
                                    </div>
                                {% endif %}
                            </div>
                            <h2 class="font-semibold text-xl lg:text-3xl">{{ isFr ? hero.titleFr : hero.titleEn }}</h2>
                            <p class="text-neutral-800/70 leading-7">{{ isFr ? hero.shortDescFr : hero.shortDescEn }}</p>
                        </div>
                        <div class="flex items-end justify-between">
                            <div class="flex items-center space-x-3">
                                <div>
                                    <img src="{{ asset('medias/blog/redactor/'~hero.redactor.photo) }}" alt="{{ hero.redactor.fullName }}" class="w-10 h-10 rounded-full border border-neutral-100">
                                </div>
                                <div class="flex flex-col space-x-0.5 text-sm">
                                    <p class="capitalize text-primary font-semibold">{{ hero.redactor.fullName }}</p>
                                    <time class="text-slate-500" datetime="{{ hero.createdAt | date('d F Y') }}" class="mr-8">{{ hero.createdAt | date('d F Y') | format_date(locale=app.request.locale) }}</time>
                                </div>
                            </div>
                            <div class="max-[420px]:hidden text-sm text-neutral-800/70">
                                <p>{{ hero.timeToRead }} {{ 'blog.list.timeToRead'|trans|raw }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-span-3 lg:order-2 order-1">
                        <img src="{{ asset('medias/blog/cover/'~hero.mainPhoto) }}" alt="{{ hero.mainPhotoAlt }}" class="w-full h-[200px] lg:h-[450px] rounded-xl object-cover">
                    </div>
                </div>
            </a>
        {% endif %}
        <section class="py-12">
            <div class="flex justify-between items-center">
                <div class="bg-neutral-100 rounded-lg px-4 py-2 text-sm font-medium text-primary">
                    {{ 'blog.list.allArticles'|trans|raw }} ({{ posts|length }})
                </div>
            </div>
        </section>
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for blog in posts|slice(1) %}
                <a href="{{ path('app_blog_show', isFr ? {'slugFr': blog.slugFr} : {'slugEn': blog.slugEn}) }}" class="border border-neutral-100 rounded-2xl lg:min-h-[400px] flex flex-col hover:border-primary/20 transition duration-300">
                    <img src="{{ asset('medias/blog/cover/'~blog.mainPhoto) }}" alt="{{ blog.mainPhotoAlt }}" class="w-full h-[200px] rounded-xl object-cover">
                    <div class="p-6 flex flex-col justify-between gap-4 flex-grow">
                        <div class="space-y-6">
                            <div class="flex flex-wrap gap-2">
                                {% set categories = blog.category %}
                                {% set total = categories|length %}
                                {% for category in categories|slice(0, 1) %}
                                    <div class="inline-block px-2.5 py-1 bg-primary/5 rounded-full text-xs text-primary border border-primary/10 capitalize">
                                        {{ isFr ? category.titleFr : category.titleEn }}
                                    </div>
                                {% endfor %}
                                {% if total > 1 %}
                                    <div class="inline-block px-2.5 py-1 bg-primary/5 rounded-full text-xs text-primary border border-primary/10">
                                        +{{ total - 1 }}
                                    </div>
                                {% endif %}
                            </div>
                            <h2 class="font-semibold text-xl">{{ isFr ? blog.titleFr : blog.titleEn }}</h2>
                            <p class="text-neutral-800/70 leading-7">{{ isFr ? blog.shortDescFr : blog.shortDescEn }}</p>
                        </div>
                        <div class="flex items-end justify-between mt-4">
                            <div class="flex items-center space-x-3">
                                <div>
                                    <img src="{{ asset('medias/blog/redactor/'~blog.redactor.photo) }}" alt="{{ blog.redactor.fullName }}" class="w-10 h-10 rounded-full border border-neutral-100">
                                </div>
                                <div class="flex flex-col space-x-0.5 text-sm">
                                    <p class="capitalize text-primary font-semibold">{{ blog.redactor.fullName }}</p>
                                    <time class="text-slate-500" datetime="{{ blog.createdAt | date('d F Y') }}" class="mr-8">{{ blog.createdAt | date('d F Y') | format_date(locale=app.request.locale) }}</time>
                                </div>
                            </div>
                            <div class="max-[420px]:hidden text-sm text-neutral-800/70">
                                <p>{{ blog.timeToRead }} {{ 'blog.list.timeToRead'|trans|raw }}</p>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </section>
        {{ component('blocks/ctaFooter') }}
    </section>
{% endblock %}
