{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block description %}{{ post.shortDescription ?? post.title }}{% endblock %}
{% block url %}/blog/{{ post.slug }}{% endblock %}

{% block body %}
    <article class="max-w-7xl mx-auto lg:px-8 px-6 lg:py-16 py-12">
        <section>
            <nav aria-label="Breadcrumb" class="flex">
                <ol role="list" class="flex items-center space-x-3 min-w-0">
                    <li>
                        <div>
                            <a href="{{ 'app_home' }}" class="text-neutral-500 hover:text-primary transition duration-100">
                                {{ ux_icon('material-symbols:home-outline-rounded', {'class': 'size-5'}) }}
                                <span class="sr-only">Home</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-5 shrink-0 text-gray-300 dark:text-gray-600">
                                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
                            </svg>
                            <a href="{{ path('app_blog') }}" class="ml-4 text-sm font-medium text-neutral-500 hover:text-primary transition duration-100">Blog</a>
                        </div>
                    </li>
                    <li class="min-w-0">
                        <div class="flex items-center min-w-0">
                            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-5 shrink-0 text-gray-300 dark:text-gray-600">
                                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
                            </svg>
                            <span aria-current="page" class="ml-4 text-sm font-regular text-neutral-400 truncate">{{ post.title }}</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </section>
        <section class="grid grid-cols-1 lg:grid-cols-2 gap-4 pt-12 items-center">
            <div class="space-y-4 flex flex-col items-center text-center lg:items-start lg:text-left">
                {% if post.category %}
                    <div class="items-center rounded-md text-xs bg-gray-50 inline-block p-1">
                        <div class="flex items-center max-[300px]:flex-col gap-1">
                            <p class="px-2.5 py-1 bg-white rounded-sm text-neutral-600 font-medium flex items-center gap-x-1.5">
                                <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg" class="shrink-0">
                                    <circle cx="4" cy="4" r="3" fill="{{ post.category.color }}"/>
                                </svg>
                                {{ post.category.name }}
                            </p>
                            <div class="px-2.5 py-1">
                                <p class="text-neutral-600">
                                    {{ post.readTime }} {{ 'blog.list.timeToRead'|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <h1 class="text-4xl lg:text-5xl/16 font-medium text-balance">{{ post.title }}</h1>
                {% if post.shortDescription %}
                    <div class="max-w-lg">
                        <p class="text-neutral-600 leading-7 text-pretty">{{ post.shortDescription }}</p>
                    </div>
                {% endif %}
            </div>
            {% if post.mainPhoto %}
                <div class="mt-4">
                    <img src="{{ post.mainPhoto }}" alt="{{ post.mainPhotoAlt }}" class="w-full aspect-3/2 rounded-2xl object-cover">
                </div>
            {% endif %}
        </section>
        <section class="grid md:grid-cols-6 lg:py-16 py-12 gap-8">
            <div class="md:col-span-2">
                <div class="rounded-lg border border-gray-200 p-6 space-y-6 sticky top-6">
                    <div class="space-y-4">
                       <div>
                           <h4 class="font-semibold text-lg font-secondary">Menu</h4>
                       </div>
                        <nav class="space-y-3" data-controller="toc">
                            {% for block in post.body %}
                                {% if block._type == 'wysiwygBlock' and block.title %}
                                    <a href="#{{ block.title|slugify }}" data-toc-target="link" class="block text-neutral-600 font-light hover:text-primary transition duration-100">
                                        {{ block.title }}
                                    </a>
                                {% elseif block._type == 'faqBlock' and block.title %}
                                    <a href="#{{ block.title|slugify }}" data-toc-target="link" class="block text-neutral-600 font-light hover:text-primary transition duration-100">
                                        {{ block.title }}
                                    </a>
                                {% endif %}
                            {% endfor %}
                        </nav>
                    </div>
                    <div class="h-[1px] bg-gradient-to-r from-slate-400/20 via-slate-500 to-slate-400/20 opacity-20"></div>
                    <div class="space-y-4">
                        <div>
                            <h4 class="font-semibold text-lg font-secondary">Contributors</h4>
                        </div>
                        {% for author in post.authors %}
                            <div class="flex items-center space-x-3">
                                {% if author.photo %}
                                    <div>
                                        <img src="{{ author.photo }}" alt="{{ author.fullName }}" class="w-10 h-10 rounded-full border border-neutral-100 object-cover">
                                    </div>
                                {% endif %}
                                <div class="flex flex-col space-x-0.5 text-sm">
                                    <p class="font-semibold">{{ author.fullName }}</p>
                                    <p class="flex-auto text-neutral-800/70">Expert en Relocation</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div>
                        <time class="text-neutral-500 text-sm" datetime="{{ post._createdAt }}">{{ 'blog.show.published'|trans|raw }} {{ post._createdAt|date('d F Y')|format_date(locale=app.request.locale) }}</time>
                    </div>
                </div>
            </div>
            <div class="md:col-span-4 space-y-4">
                {% for block in post.body %}
                    {% if block._type == 'wysiwygBlock' %}
                        <div {% if block.title %}id="{{ block.title|slugify }}"{% endif %} class="{{ block.background ? 'bg-neutral-50 rounded-2xl p-8' : '' }} scroll-mt-24">
                            {% if block.title %}
                                <h2 class="text-2xl font-semibold mb-6">{{ block.title }}</h2>
                            {% endif %}
                            {% for segment in sanity_segments(block.content) %}
                                {% if segment.type == 'text' %}
                                    <div class="text-neutral-700 font-regular leading-7 prose max-w-none">
                                        {{ segment.html|raw }}
                                    </div>
                                {% elseif segment.type == 'image' and segment.url %}
                                    <figure class="my-6">
                                        <img src="{{ segment.url }}" alt="{{ segment.alt }}" loading="lazy" class="rounded-xl w-full" />
                                    </figure>
                                {% elseif segment.type == 'youtube' and segment.videoId %}
                                    <figure class="my-6">
                                        <div class="relative w-full" style="padding-bottom:56.25%">
                                            <iframe src="https://www.youtube.com/embed/{{ segment.videoId }}" title="{{ segment.shortDescription }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="absolute inset-0 w-full h-full rounded-xl"></iframe>
                                        </div>
                                        {% if segment.shortDescription %}
                                            <figcaption class="text-sm text-neutral-500 mt-2">{{ segment.shortDescription }}</figcaption>
                                        {% endif %}
                                    </figure>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% elseif block._type == 'faqBlock' %}
                        <div {% if block.title %}id="{{ block.title|slugify }}"{% endif %} class="scroll-mt-24">
                            {% if block.title %}
                                <h2 class="text-2xl font-semibold mb-6">{{ block.title }}</h2>
                            {% endif %}
                            <div class="space-y-4">
                                {% for item in block.items %}
                                    <details class="border border-neutral-200 rounded-xl p-4 group">
                                        <summary class="font-medium cursor-pointer list-none flex items-center justify-between">
                                            {{ item.question }}
                                            <span class="ml-2 text-primary transition-transform group-open:rotate-180">
                                            {{ ux_icon('heroicon-s-chevron-down', {'class': 'size-5'}) }}
                                        </span>
                                        </summary>
                                        <p class="mt-3 text-neutral-700 leading-7">{{ item.answer }}</p>
                                    </details>
                                {% endfor %}
                            </div>
                        </div>
                    {% elseif block._type == 'ctaBlock' %}
                        <div class="bg-primary/5 rounded-2xl p-8 text-center">
                            {% if block.title %}
                                <h2 class="text-2xl font-semibold mb-2">{{ block.title }}</h2>
                            {% endif %}
                            {% if block.description %}
                                <p class="text-neutral-700 mb-6">{{ block.description }}</p>
                            {% endif %}
                            {% if block.btnText %}
                                <a href="{{ path('app_contact') }}" class="inline-block bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary/90 transition">
                                    {{ block.btnText }}
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </section>
    </article>
    {{ component('blocks/ctaFooter') }}
{% endblock %}
