                      ]
                    },
                    {
                      "@type": "WebSite",
                      "@id": "https://relocation-in-paris.fr/#website",
                      "url": "https://relocation-in-paris.fr",
                      "name": "Relocation in Paris",
                      "publisher": {
                        "@id": "https://relocation-in-paris.fr/#organization"
                      },
                      "inLanguage": ["fr-FR", "en-GB"]
                    }
                    {% block schema_page %}{% endblock %}
                  ]
                }
