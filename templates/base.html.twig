<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-full">
    <head>
        <meta charset="UTF-8">

        <!-- Google Tag Manager -->
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
                j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
                'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-TSHQL7Q6');</script>
        <!-- End Google Tag Manager -->

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="theme-color" content="#FFFFFF">

        <title>Relocation In Paris - {% block title %}{% endblock %}</title>
        <meta name="description" content="{% block description %}{% endblock %}">
        <link rel="canonical" href="https://relocation-in-paris.fr{% block url %}{% endblock %}" />

        <!-- Hreflang -->
        {% set currentPath = app.request.pathinfo|replace({('/' ~ app.request.locale): ''}) %}
        <link rel="alternate" hreflang="fr" href="https://relocation-in-paris.fr/fr{{ currentPath }}" />
        <link rel="alternate" hreflang="en" href="https://relocation-in-paris.fr/en{{ currentPath }}" />
        <link rel="alternate" hreflang="x-default" href="https://relocation-in-paris.fr/fr{{ currentPath }}" />

        <link rel="icon" type="image/jpg" href="{{ asset('medias/favicon/favicon.ico') }}" sizes="32x32">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('medias/favicon/apple-touch-icon.png') }}">

        <!-- Og Meta Tags -->
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="Relocation In Paris">
        <meta property="og:locale" content="{{ app.request.locale == 'fr' ? 'fr_FR' : 'en_GB' }}">
        <meta property="og:locale:alternate" content="{{ app.request.locale == 'fr' ? 'en_GB' : 'fr_FR' }}">
        <meta property="og:title" content="Relocation In Paris - {{ block('title') }}">
        <meta property="og:url" content="https://relocation-in-paris.fr{{ block('url') }}">
        {% set ogImage %}{% block og_image %}{{ asset('medias/banner/relocation-in-paris-banner.webp') }}{% endblock %}{% endset %}
        <meta property="og:image" content="{{ ogImage|trim }}">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:description" content="{{ block('description') }}">

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="Relocation In Paris - {{ block('title') }}">
        <meta name="twitter:description" content="{{ block('description') }}">
        <meta name="twitter:image" content="{{ ogImage|trim }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}

            {% block google_maps %}{% endblock %}

            <!-- Schema.org -->
            <script type="application/ld+json">
