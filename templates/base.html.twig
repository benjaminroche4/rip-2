        {% endblock %}
    </head>
    <body>
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TSHQL7Q6"
                    height="0" width="0" style="display:none;visibility:hidden">
            </iframe>
        </noscript>
        {{ component('blocks/gridBackground') }}
        {{ component('layout/header', {post: post|default(null)}) }}
        <main class="relative z-20">
            {% block body %}{% endblock %}
            {% if app.request.attributes.get('_route') != 'app_estimation' %}
                {{ component('blocks/whatsappButton') }}
            {% endif %}
        </main>
        {{ component('layout/footer') }}
    </body>
</html>
